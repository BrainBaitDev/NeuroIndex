[Unit]
Description=NeuroIndex Database Server
Documentation=https://github.com/yourusername/neuroindex
After=network.target

[Service]
Type=simple
User=neuroindex
Group=neuroindex
ExecStart=/usr/bin/neuroindex-server --config /etc/neuroindex/config.toml
Restart=on-failure
RestartSec=5s

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/neuroindex

[Install]
WantedBy=multi-user.target
