[Unit]
Description=NeuroIndex RESP Server
Documentation=https://github.com/BrainBaitDev/NeuroIndex
After=network.target

[Service]
Type=simple
User=neuroindex
Group=neuroindex
ExecStart=/usr/bin/neuroindex-resp-server --port 6381 --persistence-dir /var/lib/neuroindex
Restart=on-failure
RestartSec=5s

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/neuroindex /var/log/neuroindex

[Install]
WantedBy=multi-user.target
